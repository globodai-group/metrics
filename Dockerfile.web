# ===================================================================================
# GitHub Metrics - Web Server Image (Bun-based)
# For Heroku deployment
# ===================================================================================

# Use the same base as the action Dockerfile for consistency
FROM oven/bun:1.1-debian AS base

# Install system dependencies for Chrome/Puppeteer
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget \
    gnupg \
    ca-certificates \
    fonts-ipafont-gothic \
    fonts-wqy-zenhei \
    fonts-thai-tlwg \
    fonts-kacst \
    fonts-freefont-ttf \
    libxss1 \
    libx11-xcb1 \
    libxtst6 \
    libgconf-2-4 \
    lsb-release \
    curl \
    unzip \
    git \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Install Google Chrome Stable
RUN wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-chrome.gpg \
    && echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends google-chrome-stable \
    && rm -rf /var/lib/apt/lists/*

# Install Deno for miscellaneous scripts
RUN curl -fsSL https://deno.land/x/install/install.sh | DENO_INSTALL=/usr/local sh

# Environment variables for Puppeteer
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable
ENV PUPPETEER_BROWSER_PATH=google-chrome-stable
ENV NODE_ENV=production

# Dependencies stage
FROM base AS deps
WORKDIR /metrics

COPY package.json bunfig.toml ./
RUN bun install --frozen-lockfile || bun install

# Build stage
FROM deps AS builder
WORKDIR /metrics

COPY . .
RUN bun run build

# Production stage
FROM base AS runner
WORKDIR /metrics

COPY --from=builder /metrics .

# Heroku uses PORT env variable
ENV PORT=3000
EXPOSE $PORT

# Run web server with Bun
CMD ["bun", "run", "start"]
